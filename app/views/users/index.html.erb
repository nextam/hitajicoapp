<h1>Users</h1>

  <div class="content-list">
    <% @users.each do |user| %>
      <div class="content rounded-lg overflow-hidden">
      <a href=<%="/users/#{user.id}"%>>
        <%= image_tag user.image_url, class:"rounded-circle mx-5 my-2", style:"width:150px; height:150px;", alt:user.id %>
        <h3 class="text-center"><%= user.name %></h3>
        <p class="text-center"><%= user.job %></p>
        <p class=""><%= user.content %></p>
      </a>
      </div>
    <% end %>
  </div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Mail</th>
      <th>Job</th>
      <th>Birthday</th>
      <th>content</th>
      <th>password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.image %></td>
        <td><%= user.mail %></td>
        <td><%= user.job %></td>
        <td><%= user.birthday %></td>
        <td><%= user.content %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
