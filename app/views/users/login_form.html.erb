<div class="form_wrapper">

    <%= form_with(model: @user, local: true) do |form| %>
    <div class="col-md-8 mx-auto">

        <div class="h3 py-3">
        ログイン
        </div>

        <% if @error_message %>
        <div class="form-error text-danger py-2">
        <%= @error_message %>
        </div>
        <% end %>

        <div class="form-group">
        <%= form.label "メールアドレス" %>
        <%= form.email_field :mail, class:"form-control" %>
        </div>

        <div class="form-group">
        <%= form.label "パスワード" %>
        <%= form.password_field :password, class:"form-control" %>
        </div>

        <div class="form-group">
        <%= form.submit "ログイン", class:"btn-primary btn my-3" %>
        
        <a href="/users/new" class="btn btn-primary text-white">新規登録</a>
        </div>
    </div>
    <% end %>
</div>